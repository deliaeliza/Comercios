<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card2"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/design_default_color_surface"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp"
    app:cardMaxElevation="8dp"
    app:contentPadding="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <ImageView
        android:id="@+id/imageItem2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/barulu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageItem2_panel3"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/imageItem2_txt3"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="2dp"
            android:text="TextView"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageItem2_panel3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageItem2_panel3"
            app:layout_constraintTop_toTopOf="@+id/imageItem2_panel3" />

        <TextView
            android:id="@+id/imegeItem4_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:text="Precio: "
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageItem2_txt3" />

        <TextView
            android:id="@+id/imegeItem2_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/imegeItem4_txt3"
            app:layout_constraintTop_toBottomOf="@+id/imageItem2_txt3" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>