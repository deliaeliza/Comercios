<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/filtros_estandar_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:text="Filtrar"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/filtros_estandar_line0"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_txt1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filtros_estandar_tilUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_line0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/filtros_estandar_usuario"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/design_default_color_surface"
            android:ems="12"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filtros_estandar_tilCorreo"
        android:layout_width="244dp"
        android:layout_height="47dp"
        android:hint="Correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_tilUsuario">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/filtros_estandar_correo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/design_default_color_surface"
            android:ems="12"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/filtros_estandar_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_tilCorreo" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/filtros_estandar_edadMin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_surface"
        android:ems="12"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_txt3" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/filtros_estandar_edadMin2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/design_default_color_surface"
        android:ems="12"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_txt4" />

    <TextView
        android:id="@+id/filtros_estandar_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="45dp"
        android:text="Edad minima"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_tilCorreo" />

    <TextView
        android:id="@+id/filtros_estandar_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="45dp"
        android:text="Edad maxima"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/filtros_estandar_txt3"
        app:layout_constraintTop_toBottomOf="@+id/filtros_estandar_tilCorreo" />


</androidx.constraintlayout.widget.ConstraintLayout>